<?xml version="1.0" encoding="utf-8" ?>
<configuration>
   <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
   </configSections>
   <log4net>

      <appender name="PaulBunyanAppender" type="AllianzLife.SIG.log4net.PBAppender, AllianzLife.SIG.log4net, Version=1.0.0.0, Culture=neutral, PublicKeyToken=56a990d5dc9c169d" />

      <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">

<!--      
      <layout type="log4net.Layout.PatternLayout">
	   	<param name="ConversionPattern" value="%d{ABSOLUTE} [%t] %-5p %c [%x] - %m%n" />
   	</layout>
-->

         <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%P{TESTPROP} - %m%n" />
         </layout>

      </appender>
      <root>
         <level value="ALL" />
         <appender-ref ref="ConsoleAppender" />
         <appender-ref ref="PaulBunyanAppender" />
      </root>
   </log4net>
</configuration>
